<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutProductsCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <uj.roomme.app.views.CategoryView
            android:id="@+id/textCategoryToBuy"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textStyle="bold"
            android:text="To buy" />

        <uj.roomme.app.views.CategoryView
            android:id="@+id/textCategoryBought"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:background="@drawable/shape_unselected"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Bought" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProductList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonsProductsFragment"
        android:layout_below="@+id/layoutProductsCategory"
        android:scrollbars="vertical"
        android:verticalScrollbarPosition="right" />

    <LinearLayout
        android:id="@+id/buttonsProductsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAddNewProduct"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="0.5"
            android:text="Add new" />

        <Button
            android:id="@+id/buttonCompleteList"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="0.5"
            android:text="Complete list" />
    </LinearLayout>

</RelativeLayout>