<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RoomMe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
<!--        <item name="android:textColor">@color/white</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="ClickableTextView">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@drawable/selector_text_color_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ClickableRow">
        <item name="android:clickable">true</item>
        <item name="android:backgroundTint">@drawable/selector_row_color_dark</item>
    </style>

    <style name="NotClickableRow">
        <item name="android:clickable">false</item>
        <item name="android:backgroundTint">@color/primary_dark</item>
    </style>

    <style name="Theme.Fragments.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Fragments.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RoundCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>